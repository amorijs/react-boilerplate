{
  "parserOptions": {
    "ecmaVersion": 6
  },
  "extends": "airbnb",
  "env": {
    "node": true,
    "browser": true,
    "es6": true
  },
  "plugins": [
    "react",
    "jsx-a11y",
    "import"
  ],
  "rules": {
    "strict": 1,
    "linebreak-style": 0,
    "no-console": 0,
    "comma-dangle": [
      "error",
      "never"
    ],
    "no-unused-vars": [
      "warn",
      {
        "vars": "local",
        "args": "none"
      }
    ],
    "react/jsx-filename-extension": 0
  }
}